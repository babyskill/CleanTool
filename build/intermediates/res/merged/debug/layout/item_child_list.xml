<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="10dip">

    <ImageView
        android:id="@+id/iv_child_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="14dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxEms="9"
        android:ellipsize="end"
        android:paddingTop="@dimen/child_padding"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textSize="@dimen/child_app_name_size"
        android:layout_toRightOf="@id/iv_child_icon"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_child_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_child_icon"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:singleLine="true"
        android:maxEms="18"
        android:ellipsize="middle"
        android:paddingBottom="@dimen/child_padding"
        android:layout_toRightOf="@id/iv_child_icon"
        android:textSize="@dimen/child_backgroup_size"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray" />

    <CheckBox
        android:id="@+id/cb_child_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/child_cb_padding"
        android:focusable="false"
        android:checked="true"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/tv_child_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/cb_child_check"
        android:textSize="@dimen/child_backgroup_size"
        android:textColor="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dip" />
</RelativeLayout>

